<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoOcean</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inscreening.styles.css" asp-append-version="true" />
    <link href="~/css/Cadastro.css" rel="stylesheet" type="text/css" />
    <style>
        /* Seletor para o campo de data */
        input[type="date"] {
            /* Define a cor do texto */
            color: #808080; /* Aqui você pode especificar a cor que deseja, por exemplo, branco (#fff) */
            /* Define outras propriedades, como fonte, tamanho, etc., se desejar */
        }
    </style>
</head>
<body>


    <form asp-controller="Area" asp-action="CadastroArea" method="post">
        <div class="agrupamento">
            <h1 class="titulo">Cadatro de Area</h1>
        </div>

        <div class="agrupamento-input">

            <input class="inputs" name="Cep" type="text" id="exampleInputPassword1" required placeholder="Cep">
            <br />

            <input class="inputs" name="TipoPoluicao" type="text" id="exampleInputPassword1" required placeholder="Tipo da Poluicao">

            <br />
            <input class="inputs" name="Descricao" type="text" id="exampleInputPassword1" required placeholder="Descricao">


            <input  type="hidden" name="IdVoluntario" value="@ViewBag.IdVoluntario">

        </div>


        <div class="agrupamento-links">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <br />
            <br />
        </div>

    </form>
</body>
</html>
